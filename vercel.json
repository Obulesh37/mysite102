{
  "version": 2,
  "builds": [
    {
      "src": "vercel_deploy.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    },
    {
      "src": "static/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "vercel_deploy.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "project_name.settings",
    "PYTHON_VERSION": "3.11"
  }
}
